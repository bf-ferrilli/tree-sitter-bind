{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "bind",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_item"
      }
    },
    "_item": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "comment"
        },
        {
          "type": "SYMBOL",
          "name": "directive"
        },
        {
          "type": "SYMBOL",
          "name": "record"
        },
        {
          "type": "PATTERN",
          "value": ".*"
        }
      ]
    },
    "comment": {
      "type": "PATTERN",
      "value": ";[^\\r\\n]*"
    },
    "directive": {
      "type": "PATTERN",
      "value": "\\$[A-Z]+\\s+\\S+"
    },
    "record": {
      "type": "PATTERN",
      "value": "\\S+\\s+(IN\\s+)?(A|AAAA|CNAME|MX|NS|PTR|SOA|SRV|TXT|HINFO)\\s+.*"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s+"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}